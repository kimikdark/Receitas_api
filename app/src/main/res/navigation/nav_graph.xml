<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/categoryListFragment">

    <!-- Main Screens (Bottom Navigation) -->
    <fragment
        android:id="@+id/categoryListFragment"
        android:name="com.example.receitas.fragments.CategoryListFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_category_list" >
        <action
            android:id="@+id/action_categoryListFragment_to_mealListFragment"
            app:destination="@id/mealListFragment" />
        <action
            android:id="@+id/action_categoryListFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/shoppingCartFragment"
        android:name="com.example.receitas.fragments.ShoppingCartFragment"
        android:label="Lista de Compras"
        tools:layout="@layout/fragment_shopping_cart" />

    <!-- Placeholder Fragments for Bottom Nav -->
    <fragment android:id="@+id/randomRecipeFragment" android:label="Random" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.receitas.fragments.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites">
        <action
            android:id="@+id/action_favoritesFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
    </fragment>

    <!-- Other Screens -->
    <fragment
        android:id="@+id/mealListFragment"
        android:name="com.example.receitas.fragments.MealListFragment"
        android:label="{categoryName}"
        tools:layout="@layout/fragment_meal_list" >
        <argument
            android:name="categoryName"
            app:argType="string" />
        <action
            android:id="@+id/action_mealListFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.example.receitas.fragments.RecipeDetailFragment"
        android:label="Recipe Details"
        tools:layout="@layout/fragment_recipe_detail">
        <argument
            android:name="mealId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.receitas.fragments.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
    </fragment>

</navigation>
