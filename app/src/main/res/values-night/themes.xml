<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Night Mode -->
    <style name="Base.Theme.Receitas" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material 3 Color Attributes -->

        <!-- Primary brand color (for buttons, FABs, etc.) -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Surface colors (for backgrounds of cards, sheets, etc.) -->
        <item name="colorSurface">@color/background_dark</item>
        <item name="colorOnSurface">@color/text_on_dark</item>

        <!-- General background color of the app -->
        <item name="android:windowBackground">@color/background_dark</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark</item>

    </style>

    <style name="Theme.Receitas" parent="Base.Theme.Receitas" />
</resources>
