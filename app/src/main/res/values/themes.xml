<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Receitas" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cor principal da App (Toolbar, etc.) -->
        <item name="colorPrimary">@color/orange_500</item>
        <!-- Cor da Status Bar -->
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <!-- Cor do texto e ícones na Toolbar -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Cor de acento (para botões, etc.) -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Fundo da App -->
        <item name="android:windowBackground">@color/light_gray</item>
    </style>

    <style name="Theme.Receitas" parent="Base.Theme.Receitas" />
</resources>
